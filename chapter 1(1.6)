#include<iostream>
using namespace std;
void ABC(string str)
{
  
 
    for(int i=0;i<str.length();i++)
    {
         int  count=1;
        while(i<(str.length()-1)&& str[i]==str[i+1])
        {
            count++;
            i++;
        }
        cout<<str[i]<<count;
    }
}

int main()
{
    string str="aaddddwwwwdd";
    ABC(str);
    return 0;
}
